# New Terminal
super + Return
	xterm -fn 5x10 # TODO Workaround (see .bashrc)

# Programm launcher
super + space
	dmenu_run -p "Run" -nb "#333" -nf "#BBB" -sb "#d17b49" -sf "#fff" -i

# Close current node
super + c
	bspc node -c

# Reload sxhkd config files
super + Escape
	pkill -USR1 -x sxhkd

# Quit bspwm
super + alt + Escape
	bspc quit

# Switch between the tiled and monocle layout
super + m
	bspc desktop -l next

# Preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# Cancel the preselection
super + ctrl + space
	bspc node -p cancel

# Set node to floating
super + f
	bspc node -t floating

# Set node to tiled
super + t
	bspc node -t tiled

# Move floating window
super + {Left, Down, Up, Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Swap with greatest tile
super + g
	bspc node -s biggest

# Resize tiled node (top left corner)
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,top 0 20,top 0 -20,left 20 0}

# Resize tiled node (bottom right corner)
super + alt + ctrl + {Left,Down,Up,Right}
	bspc node -z {right -20 0,bottom 0 20, bottom 0 -20,right 20 0}
