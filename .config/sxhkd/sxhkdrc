# New Terminal
super + Return
	xterm -fn 5x10 # TODO Workaround (see .bashrc)

# Programm launcher
super + space
	dmenu_run -p "Run" -nb "#333" -nf "#BBB" -sb "#d17b49" -sf "#fff" -i

# Close current node
super + c
	bspc node -c

# Reload sxhkd config files
super + Escape
	pkill -USR1 -x sxhkd

# Quit bspwm
super + alt + Escape
	bspc quit

# Switch between the tiled and monocle layout
super + m
	bspc desktop -l next

# Preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# Cancel the preselection
super + ctrl + space
	bspc node -p cancel
